import socket

s = socket.socket (socket.AF_INET, socket.SOCK_STREAM)
host = socket.gethostname()
print socket.gethostbyname(socket.gethostname())
port = 6112

s.bind((host, port))
s.listen(5)

while True:
    c, addr = s.accept()
    print 'Got connectiong from', addr
    c.send('Sending from server')
    data = c.recv(1024)
    print data
